<?xml version="1.0" encoding="UTF-8" ?>
<phpunit boostrap="./vendor/autoload.php"
         backupGlobals="true"
         colors="true"
         verbose="false">
    <testsuites>
        <testsuite name="all">
            <file>tests/</file>
        </testsuite>
        <testsuite name="unit">
            <file>tests/Unit</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="tests/_reports/logs/clover.xml"/>
        <log type="coverage-html" target="tests/_reports/coverage" charset="UTF-8" yui="true" highlighted="true"/>
    </logging>
</phpunit>